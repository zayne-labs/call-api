{
	"name": "@zayne-labs/call-api",
	"version": "0.1.3",
	"type": "module",
	"description": "A lightweight wrapper over fetch with quality of life improvements like built-in request cancellation, retries, interceptors and more",
	"repository": {
		"type": "git",
		"url": "https://github.com/ryan-zayne/callApi.git"
	},
	"homepage": "https://github.com/ryan-zayne/callApi#readme",
	"license": "MIT",
	"author": "Ryan Zayne",
	"keywords": [
		"fetch",
		"api",
		"wrapper",
		"request cancellation",
		"cancel",
		"retry",
		"interceptor"
	],
	"scripts": {
		"prepare": "husky",
		"test:check-types": "tsc --pretty -p tsconfig.json",
		"test:format": "prettier --write .",
		"test:lint": "eslint src/**/*.ts --max-warnings 10 --report-unused-disable-directives",
		"build": "tsup",
		"build:dev": "tsup --watch",
		"version-package": "changeset version",
		"release": "changeset publish"
	},
	"main": "./index.js",
	"types": "./index.d.ts",
	"exports": {
		".": {
			"import": "./index.js",
			"require": "./index.cjs"
		}
	},
	"files": [
		"dist"
	],
	"sideEffects": false,
	"packageManager": "pnpm@9.4.0",
	"publishConfig": {
		"access": "public"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.5",
		"@commitlint/cli": "^19.3.0",
		"@commitlint/config-conventional": "^19.2.2",
		"@eslint/js": "^9.5.0",
		"@zayne-labs/tsconfig": "^0.0.7",
		"changelogen": "^0.5.5",
		"eslint": "^9.5.0",
		"eslint-plugin-import-x": "^0.5.1",
		"eslint-plugin-jsdoc": "^48.2.12",
		"eslint-plugin-sonarjs": "^1.0.3",
		"eslint-plugin-unicorn": "^54.0.0",
		"globals": "^15.6.0",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.7",
		"prettier": "^3.3.2",
		"tsup": "^8.1.0",
		"typescript": "5.4.5",
		"typescript-eslint": "^7.13.1"
	}
}
