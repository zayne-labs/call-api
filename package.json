{
	"name": "@zayne-labs/callapi",
	"version": "0.4.2",
	"type": "module",
	"description": "A lightweight wrapper over fetch with quality of life improvements like built-in request cancellation, retries, interceptors and more",
	"main": "./dist/cjs/index.cjs",
	"module": "./dist/esm/index.js",
	"types": "./dist/esm/index.d.ts",
	"scripts": {
		"prepare": "husky",
		"test:check-types": "tsc --pretty -p tsconfig.json",
		"test:format": "prettier --write --cache .",
		"test:lint": "eslint src/**/*.ts website/**/*.{js,ts,tsx,mjs} --max-warnings 10 --report-unused-disable-directives",
		"test:size": "size-limit",
		"build": "tsup",
		"build:dev": "tsup --watch",
		"version-package": "changeset version",
		"release": "changeset publish"
	},
	"exports": {
		".": {
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.cjs"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"dist"
	],
	"sideEffects": false,
	"repository": "ryan-zayne/callApi",
	"homepage": "https://github.com/ryan-zayne/callApi#readme",
	"bugs": {
		"url": "https://github.com/ryan-zayne/callApi/issues"
	},
	"license": "MIT",
	"author": "Ryan Zayne",
	"keywords": [
		"fetch",
		"api",
		"wrapper",
		"request",
		"cancel",
		"retry",
		"interceptor"
	],
	"packageManager": "pnpm@9.4.0",
	"engines": {
		"node": ">=16.x"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.15.3",
		"@changesets/cli": "^2.27.7",
		"@eslint/js": "^9.7.0",
		"@size-limit/preset-small-lib": "^11.1.4",
		"@zayne-labs/tsconfig": "^0.0.7",
		"eslint": "^9.7.0",
		"eslint-plugin-import-x": "^3.0.1",
		"eslint-plugin-jsdoc": "^48.7.0",
		"eslint-plugin-sonarjs": "^1.0.3",
		"eslint-plugin-unicorn": "^54.0.0",
		"globals": "^15.8.0",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.7",
		"prettier": "^3.3.2",
		"size-limit": "^11.1.4",
		"tsup": "^8.1.0",
		"typescript": "5.5.3",
		"typescript-eslint": "^7.16.0"
	}
}